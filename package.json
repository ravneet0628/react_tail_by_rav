{
  "name": "react_tail_by_rav",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "A comprehensive React component library with TailwindCSS and dark mode support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist --skipLibCheck",
    "build:watch": "vite build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "preview": "vite preview",
    "clean": "rimraf dist storybook-static",
    "prepare": "npm run build",
    "release": "npm run clean && npm run build && npm publish --access public",
    "ci": "npm run lint && npm run type-check && npm run test && npm run build"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwindcss",
    "dark-mode",
    "typescript"
  ],
  "author": "Ravneet Kaur",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@storybook/addon-a11y": "^9.0.15",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-links": "^9.0.15",
    "@storybook/addon-onboarding": "^9.0.16",
    "@storybook/react-vite": "^9.0.15",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "9.0.15",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^7.0.1",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^3.29.4",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "standard-version": "^9.5.0",
    "storybook": "^9.0.15",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "clsx": "^2.0.0",
    "lucide-react": "^0.525.0",
    "tailwindcss": "^4.1.11"
  }
}
